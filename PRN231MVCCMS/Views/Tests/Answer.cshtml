@using PRN231APICMS.Mapper
@model List<UserQuestionDTO>
@{
    int i = 0;
    int countquestion = 0;
}
<div class="row gx-4 gx-lg-5">
    @if (Model.Count == 0)
    {
        <h1>Bạn chưa chọn đáp án đã submit????</h1>
    }

    @foreach (var item in Model)
    {

        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-6 me-auto">
               
                    <div class="fw-bold">@item.QuestionName</div>
                <div class="fw-bold">>@item.OptionName</div>
                
                <div class="fw-bold">>@item.IsCorrect</div>
                @if(@item.IsCorrect==true){ i++; }
                @{
                    countquestion =(int) item.QuestionCount;
                }
            </div>
            <span class="badge bg-primary rounded-pill"></span>
        </li>
        
    }
    @{
        double markoneq = (double)10 / (double)(countquestion) ;
        double mark = i * markoneq;
    }

    </ol>
    <h3>Answer is Correct:@i</h3>
    <h3>Mark:@mark</h3>
</div>

